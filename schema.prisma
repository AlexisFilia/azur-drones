datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  status   String @default("")
  password String
}

model Person {
  id           String      @id @default(cuid())
  familyName   String      @default("")
  givenName    String      @default("")
  email        String      @default("")
  status       String      @default("")
  telephone    String      @default("")
  soldActions  UseAction[] @relation("Person_soldActions")
  pilotActions UseAction[] @relation("Person_pilotActions")
}

model Organization {
  id                     String      @id @default(cuid())
  name                   String      @default("")
  website                String      @default("")
  requestedInterventions UseAction[] @relation("UseAction_client")
}

model ProductModel {
  id       String    @id @default(cuid())
  name     String    @default("")
  products Product[] @relation("Product_productModel")
}

model Product {
  id             String        @id @default(cuid())
  name           String        @default("")
  status         String        @default("")
  productModel   ProductModel? @relation("Product_productModel", fields: [productModelId], references: [id])
  productModelId String?       @map("productModel")
  articles       Article[]     @relation("Article_product")

  @@index([productModelId])
}

model Article {
  id         String      @id @default(cuid())
  sku        String      @default("")
  product    Product?    @relation("Article_product", fields: [productId], references: [id])
  productId  String?     @map("product")
  useActions UseAction[] @relation("UseAction_article")

  @@index([productId])
}

model UseAction {
  id          String        @id @default(cuid())
  name        String        @default("")
  status      String        @default("")
  description String        @default("")
  takeOffTime DateTime?
  duration    Int?
  commercials Person[]      @relation("Person_soldActions")
  pilots      Person[]      @relation("Person_pilotActions")
  article     Article?      @relation("UseAction_article", fields: [articleId], references: [id])
  articleId   String?       @map("article")
  report      Report?       @relation("Report_useAction")
  client      Organization? @relation("UseAction_client", fields: [clientId], references: [id])
  clientId    String?       @map("client")

  @@index([articleId])
  @@index([clientId])
}

model Report {
  id          String     @id @default(cuid())
  title       String     @default("")
  status      String     @default("")
  criticity   String     @default("")
  description String     @default("")
  useAction   UseAction? @relation("Report_useAction", fields: [useActionId], references: [id])
  useActionId String?    @unique @map("useAction")
}